# Application Settings
APP_NAME=space-empire-4x
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=True  # Set to False in production
API_VERSION=v1
ENABLE_DOCS=True  # Set to False in production to disable Swagger/ReDoc

# Server Settings
HOST=0.0.0.0  # Use 127.0.0.1 for local-only access
PORT=8000
WORKERS=1  # Recommended: 2 * CPU cores + 1
RELOAD=True  # Set to False in production

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080
RATE_LIMIT_PER_MINUTE=60

# Database Settings (Docker-friendly defaults)
DATABASE_URL=postgresql://postgres:postgres@db:5432/space_empire_db
DB_POOL_SIZE=5  # Recommended: num_workers * 2
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_ECHO=False  # Set to True to log all SQL queries

# Game Settings
MAX_PLAYERS_PER_GAME=8  # Range: 2-8
GALAXY_SIZE=medium  # Options: small (100x100), medium (200x200), large (400x400)
TURN_TIMEOUT_MINUTES=30  # Range: 5-120
START_RESOURCES=1000  # Starting resources per empire
MAX_COLONIES=50  # Maximum colonies per empire
TECH_LEVELS=5  # Number of technology levels
VICTORY_POINTS_TO_WIN=1000

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log  # Leave empty for stdout only
LOG_ROTATION=1d  # Options: 1d, 1w, 1m

